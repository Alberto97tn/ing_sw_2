<section class="<%= controller_name %>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4"><%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %></h3>
          </div>
          <div class="card-body">
            <table class="table">
              <thead>
              <tr>
                <th>Client</th>
                <th>Date</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Invoice Number</th>
                <th>Amount</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <%@invoices.each do |invoice| %>
                  <tr>
                    <td><%= invoice.client.fullname %></td>
                    <td><%= invoice.date %></td>
                    <td><%= invoice.created_at %></td>
                    <td><%= invoice.updated_at %></td>
                    <td><%= invoice.invoice_number %></td>
                    <td><%= invoice.amount %></td>
                    <td><%= link_to 'Show', invoice %></td>
                    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
                    <td><%= link_to 'Destroy', invoice, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<p id="notice"><%= notice %></p>
