<section class="<%= controller_name.titleize %>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <div class="card">
          <div class="card-body">
            <table class="table">
              <thead>
              <tr>
                <td>
                  <strong>Date</strong>
                </td>
                <td><%= @invoice.date %></td>
              </tr>
              <tr>
                <td>
                  <strong>Client</strong>
                </td>
                <td><%= @invoice.client.full_name %></td>
              </tr>
              <tr>
                <td>
                  <strong>Amount</strong>
                </td>
                <td><%= @invoice.amount %></td>
              </tr>

              <% Report.where(invoice_id: @invoice.id).each do |report| %>
                <%= report.description %>
                <%= report.hours %>
              <% end %>

              <tr>
                <td>
                  <div class="btn-group">
                    <%= link_to 'Delete', @invoice, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary" %>
                  </div>
                </td>
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col offset-sm-0,5">
    <div class="btn-group">
      <%= link_to 'Back ', invoices_path, class: "btn btn-secondary" %>
      <%= link_to 'Edit ', edit_invoice_path, class: "btn btn-primary" %>
    </div>
  </div>
</section>
