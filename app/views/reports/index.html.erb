<section class="<%= controller_name%>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4">bopoh</h3>
          </div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th>Hours</th>
                  <th>Description</th>
                  <th>Client</th>
                  <th>Invoice</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @reports.each do |report| %>
                <tr>
                  <td><%= report.hours %></td>
                  <td><%= report.description %></td>
                  <td><%= report.client_id %></td>
                  <td><%= report.invoice_id %></td>
                  <td><%= link_to 'Show',report %></td>
                  <td><%= link_to 'Edit', edit_report_path(report) %></td>
                  <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<p id="notice"><%= notice %></p>


<%= link_to 'New Report', new_report_path %>
