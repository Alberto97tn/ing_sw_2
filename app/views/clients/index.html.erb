<section class="<%= controller_name.titleize %>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex align-items-center">
            <h3 class="h4"><%= link_to 'New Client', new_client_path, class: "btn btn-primary" %></h3>
          </div>
          <div class="card-body">
            <table class="table">
              <thead>
              <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Company Name</th>
                <th>Vat Number</th>
                <th>Address</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @clients.each do |client| %>
                  <tr>
                    <td><%= client.name %></td>
                    <td><%= client.surname %></td>
                    <td><%= client.email %></td>
                    <td><%= client.phone_number %></td>
                    <td><%= client.company_name %></td>
                    <td><%= client.vat_number %></td>
                    <td><%= client.address %></td>
                    <td><%= link_to 'Show', client %></td>
                    <td><%= link_to 'Edit', edit_client_path(client) %></td>
                    <td><%= link_to 'Destroy', client, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<p id="notice"><%= notice %></p>
