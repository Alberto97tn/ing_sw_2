<section class="<%= controller_name.titleize %>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <div class="card">
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <td>
                    <strong>Name</strong>
                  </td>
                  <td><%= @client.name %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Surname</strong>
                  </td>
                  <td><%= @client.surname %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Email</strong>
                  </td>
                  <td><%= @client.email %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Company Name</strong>
                  </td>
                  <td><%= @client.company_name %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Vat Number</strong>
                  </td>
                  <td><%= @client.vat_number %></td>
                </tr>
                <tr>
                  <td>
                    <strong>Address</strong>
                  </td>
                  <td><%= @client.address %></td>
                </tr>
                <tr>
                  <td>
                    <div class="btn-group">
                      <%= link_to 'Delete', @client, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-primary"%>
                    </div>
                  </td>
                </tr>
              </thead>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

<div class="col offset-sm-0,5">
  <div class="btn-group">
    <%= link_to 'Back ', clients_path, class: "btn btn-secondary" %>
    <%= link_to 'Edit ', edit_client_path, class: "btn btn-primary" %>
  </div>
</div>

</section>
