<section class="<%= controller_name.titleize %>">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
        <div class="card">
          <div class="card-body">
            <table class="table">
              <thead>
              <tr>
                <td>
                  <strong>Name</strong>
                </td>
                <td><%= @client.name %></td>
              </tr>
              <tr>
                <td>
                  <strong>Surname</strong>
                </td>
                <td><%= @client.surname %></td>
              </tr>
              <tr>
                <td>
                  <strong>Email</strong>
                <td><%= @client.email %></td>
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="col offset-sm-0,5">
    <div class="btn-group">
      <%= link_to 'Edit ', edit_client_path, class: "btn btn-primary" %>
      <%= link_to 'Back ', clients_path, class: "btn btn-secondary" %>
    </div>
  </div>

</section>
